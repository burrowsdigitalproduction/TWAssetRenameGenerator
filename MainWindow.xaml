        <GroupBox Header="Raidators" HorizontalAlignment="Left" Height="123" Margin="8,167,0,0" VerticalAlignment="Top" Width="333" Grid.ColumnSpan="2">
            <CheckBox x:Name="cbx1518" Content="1518(Base)" HorizontalAlignment="Left" Height="16" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" IsEnabled="False"/>
        </GroupBox>
        <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left" Margin="118,477,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="btnRun_Click"/>
        <CheckBox x:Name="cbxActive" Content="Active" HorizontalAlignment="Left" Height="15" Margin="91,406,0,0" VerticalAlignment="Top" Width="77" RenderTransformOrigin="0.554,0.654" IsChecked="True" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbxTempo" Content="Tempo" HorizontalAlignment="Left" Height="15" Margin="60,406,0,0" VerticalAlignment="Top" Width="77" IsChecked="True" Grid.Column="1"/>
        <CheckBox x:Name="cbxE500" Content="E500" HorizontalAlignment="Left" Margin="45,136,0,0" VerticalAlignment="Top" Grid.Column="1" RenderTransformOrigin="0.556,2.2"/>
        <CheckBox x:Name="cbx1519" Content="1519" HorizontalAlignment="Left" Height="16" Margin="24,215,0,0" VerticalAlignment="Top" Width="80" IsChecked="True"/>
        <CheckBox x:Name="cbx1631" Content="1631" HorizontalAlignment="Left" Height="16" Margin="45,192,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.Column="1"/>
        <CheckBox x:Name="cbx1630" Content="1630" HorizontalAlignment="Left" Height="16" Margin="118,260,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbx1626" Content="1626" HorizontalAlignment="Left" Height="16" Margin="24,258,0,0" VerticalAlignment="Top" Width="80" IsChecked="True"/>
        <CheckBox x:Name="cbx1629" Content="1629" HorizontalAlignment="Left" Height="16" Margin="118,239,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbx1625" Content="1625" HorizontalAlignment="Left" Height="16" Margin="24,237,0,0" VerticalAlignment="Top" Width="80" IsChecked="True"/>
        <CheckBox x:Name="cbx1628" Content="1628" HorizontalAlignment="Left" Height="16" Margin="118,218,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbx1627" Content="1627" HorizontalAlignment="Left" Height="16" Margin="118,192,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="cbx1644" Content="1644" HorizontalAlignment="Left" Height="16" Margin="45,260,0,0" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.586,5.186" IsChecked="True" Grid.Column="1"/>
        <CheckBox x:Name="cbx1643" Content="1643" HorizontalAlignment="Left" Height="16" Margin="45,239,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.Column="1"/>
        <CheckBox x:Name="cbx1642" Content="1642" HorizontalAlignment="Left" Height="16" Margin="45,219,0,0" VerticalAlignment="Top" Width="80" IsChecked="True" Grid.Column="1"/>
        <GroupBox Grid.ColumnSpan="2" Header="Area Type Copy" HorizontalAlignment="Left" Height="69" Margin="8,295,0,0" VerticalAlignment="Top" Width="333">
            <CheckBox x:Name="cbxFullMirror" Content="FullMirror" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True"/>
        </GroupBox>
        <CheckBox x:Name="cbxHalfShower" Content="HalfShower" HorizontalAlignment="Left" Margin="18,321,0,0" VerticalAlignment="Top" Grid.Column="1" IsEnabled="False"/>
        <CheckBox x:Name="cbxRoca" Content="Roca" HorizontalAlignment="Left" Margin="24,109,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbxTheGap" Content="TheGap" HorizontalAlignment="Left" Margin="45,109,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <CheckBox x:Name="cbxBath" Content="Rename Roca Bath" HorizontalAlignment="Left" Height="22" Margin="16,454,0,0" VerticalAlignment="Top" Width="118"/>
