        <GroupBox Header="Bath Taps" HorizontalAlignment="Left" Height="61" Margin="4,379,0,0" VerticalAlignment="Top" Width="333" Grid.ColumnSpan="2">
            <CheckBox x:Name="cbxAlto" Content="Alto" HorizontalAlignment="Left" Height="15" Margin="0,10,0,0" VerticalAlignment="Top" Width="77" IsChecked="True"/>
        </GroupBox>
        <GroupBox Header="PackageCopyOver" HorizontalAlignment="Left" Height="78" Margin="8,84,0,0" VerticalAlignment="Top" Width="333" Grid.ColumnSpan="2">
            <CheckBox x:Name="cbxE100" Content="E100" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
